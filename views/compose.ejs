<%- include('partials/header'); -%>
  <h1>Compose</h1>


  <form action="/compose" method="post">
    <label>Title</label>
    <div class="input-group">
      <input type="text" name="postTitle" placeholder="Compose Something" class="form-control postTitle">
    </div>
    <br>
    <label>Post</label>
    <div class="form-floating">
      <textarea class="form-control" name="postBody" style="height: 100px"></textarea>
    </div>

    <br>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
  </form>


  <%- include('partials/footer'); -%>